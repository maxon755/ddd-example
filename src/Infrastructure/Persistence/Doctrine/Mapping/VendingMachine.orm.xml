<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="MRF\Domain\Vending\VendingMachine\VendingMachine" table="vending_machines">
        <id name="serialNumber" length="16"/>
        <field name="name" nullable="true"/>
        <field name="address" nullable="true"/>
        <field name="operatorPhone" column="operator_phone" nullable="true"/>
        <field name="createdAt" column="created_at" type="date_immutable"/>
        <field name="activatedAt" column="activated_at" type="date_immutable" nullable="true"/>
        <field name="lastRequestedAt" column="last_requested_at" type="date_immutable" nullable="true"/>
    </entity>

</doctrine-mapping>
