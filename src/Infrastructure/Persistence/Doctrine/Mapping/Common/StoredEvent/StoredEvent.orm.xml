<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

<entity
        name="MRF\Domain\Common\Event\StoredEvent"
        table="domain_events"
        repository-class="MRF\Infrastructure\Persistence\Doctrine\DoctrineEventStore"
>
    <id name="eventId" column="event_id" type="integer">
        <generator strategy="IDENTITY"/>
    </id>
    <field name="eventType"/>
    <field name="body" type="json"/>
    <field name="occurredAt" column="occurred_at" type="datetime_immutable"/>
</entity>
</doctrine-mapping>
